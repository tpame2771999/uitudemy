<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@+id/login_background"
    android:background="@drawable/login_screen"
    android:padding="@dimen/margin_base_x4"
    android:clipToPadding="false"
    tools:context=".CourseDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_course_detail_ctn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ctn_white_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="@dimen/elevation_fragment">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/cardview_cover"
            app:cardCornerRadius="@dimen/corner_radius"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/activity_course_detail_ctn">

            <ImageView
                android:id="@+id/imgview_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/course_description"
                android:scaleType="centerCrop"
                android:src="@drawable/cprogrampic"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/cd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/course_details_title"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_base_x2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview_cover"
            android:layout_marginHorizontal="@dimen/margin_base_x4"
            android:gravity="center"/>

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/cd_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_ctn"
            app:layout_constrainedHeight="true"
            android:paddingHorizontal="@dimen/margin_base_x4"
            android:paddingVertical="@dimen/margin_base"
            android:layout_marginVertical="@dimen/margin_base"
            android:fillViewport="true"
            android:clipToPadding="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/scrollview"
                app:layout_constraintRight_toRightOf="@id/scrollview"
                app:layout_constraintTop_toTopOf="@id/scrollview"
                app:layout_constraintBottom_toBottomOf="@id/scrollview">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/by_title"
                    android:text="@string/by"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/by_author"
                    android:text="@string/author_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small"
                    app:layout_constraintLeft_toRightOf="@id/by_title"
                    app:layout_constraintTop_toTopOf="@id/by_title"
                    android:layout_marginStart="@dimen/margin_base"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/from_title"
                    android:text="@string/from"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/by_title"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/from_time"
                    android:text="@string/time_created"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small"
                    app:layout_constraintLeft_toRightOf="@id/from_title"
                    app:layout_constraintTop_toTopOf="@id/from_title"
                    android:layout_marginStart="@dimen/margin_base"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price_title"
                    android:text="@string/price"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/from_title"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price_text"
                    android:text="@string/course_price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small"
                    app:layout_constraintTop_toTopOf="@id/price_title"
                    app:layout_constraintLeft_toRightOf="@id/price_title"
                    android:layout_marginStart="@dimen/margin_base"/>

                <TextView
                    android:id="@+id/courseobj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/course_object"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/price_title"
                    android:layout_marginTop="@dimen/margin_base_x4"/>

                <TextView
                    android:id="@+id/objtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/objective_text"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/courseobj"
                    android:justificationMode="inter_word"/>

                <TextView
                    android:id="@+id/courseov"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/course_overview"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/objtext"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/ovtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/overview_text"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/courseov"
                    android:justificationMode="inter_word"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/related_course"
                    android:text="@string/related_course"
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/ovtext"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/margin_base_x4"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/related_course_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:scrollbars="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/related_course" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_rating"
                    android:text="@string/user_rating"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/related_course_view"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/margin_base_x4"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rating_star"
                    android:progressTint="@color/colorAccent"
                    app:layout_constraintTop_toBottomOf="@id/user_rating"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:scaleX="0.8"
                    android:scaleY="0.8"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment_box"
                    android:background="@drawable/ctn_white_background_2"
                    android:elevation="@dimen/margin_base"
                    app:layout_constraintTop_toBottomOf="@id/rating_star"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_margin="@dimen/margin_base_x2"
                    android:padding="@dimen/margin_base_x2"
                    android:clipToPadding="false">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/user_avatar"
                        android:src="@drawable/avatar"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/write_comment_title"
                        android:text="@string/write_comment_title"
                        android:textColor="@color/colorButton"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_medium"
                        app:layout_constraintTop_toTopOf="@id/user_avatar"
                        app:layout_constraintLeft_toRightOf="@id/user_avatar"
                        android:layout_marginStart="@dimen/margin_base_x3"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_comment"
                        android:background="@drawable/comment_box"
                        app:layout_constraintTop_toBottomOf="@id/write_comment_title"
                        app:layout_constraintLeft_toLeftOf="@id/write_comment_title"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constrainedWidth="true"
                        app:layout_constrainedHeight="true"
                        android:layout_marginTop="@dimen/margin_base_x2"
                        android:hint="@string/write_comment_title"
                        android:padding="@dimen/margin_base_x2"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/black"
                        android:gravity="top"
                        android:autofillHints=""
                        android:inputType="textMultiLine"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_rating_view"
                    app:layout_constraintTop_toBottomOf="@id/comment_box"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/margin_base_x2"
                    android:scrollbars="horizontal"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="@dimen/margin_base_x3"
            android:clipToPadding="false"
            android:id="@+id/btn_ctn">

            <Button
                android:id="@+id/btnrate"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/login_button"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/rate_btn"
                android:textColor="@color/colorBtnText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btnjoin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:elevation="@dimen/elevation_fragment"
                android:layout_marginHorizontal="@dimen/margin_base"/>

            <Button
                android:id="@+id/btnjoin"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/login_button"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/join_btn"
                android:textColor="@color/colorBtnText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btnrate"
                app:layout_constraintBottom_toBottomOf="parent"
                android:elevation="@dimen/elevation_fragment"
                android:layout_marginHorizontal="@dimen/margin_base"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>